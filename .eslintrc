{
  "root": true,
  "extends": "airbnb-typescript",
  "plugins": ["jest"],
  "env": {
    "jest/globals": true
  },
  "rules": {
    "no-bitwise": "off",
    "no-lonely-if": "off",
    "class-methods-use-this": "off",
    "arrow-body-style": "off",
    "no-loop-func": "off",
    "no-plusplus": "off"
  },
  "settings": {
    "react": {
      "version": "18.2.0"
    }
  }
}
